{
    "name": "@gmstn/shard",
    "version": "0.0.1",
    "description": "message storage server",
    "exports": "./index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev:full-rebuild": "rm tsconfig.tsbuildinfo && pnpm dev",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "lint": "eslint --fix",
        "dev": "tsx src/index.ts",
        "build": "tsdown src/index.ts",
        "docker:pre-build": "sed \"s/[\\\"']//g\" .env > .docker.env",
        "docker:build": "pnpm docker:pre-build && docker build -t gmstn-systems-shard .",
        "docker:run": "source $(eval pwd)/.docker.env && echo $SERVER_PORT && docker run -p $SERVER_PORT:$SERVER_PORT --env-file .docker.env gmstn-systems-shard",
        "start": "pnpm build && node dist/index.mjs"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "packageManager": "pnpm@10.18.0",
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@types/node": "^24.9.0",
        "@types/ws": "^8.18.1",
        "drizzle-kit": "^0.31.5",
        "eslint": "^9.38.0",
        "globals": "^16.4.0",
        "jiti": "^2.6.1",
        "prettier": "^3.6.2",
        "tsdown": "^0.16.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.1"
    },
    "dependencies": {
        "@atcute/atproto": "^3.1.8",
        "@atcute/client": "^4.0.5",
        "@atcute/crypto": "^2.2.5",
        "@atcute/identity-resolver": "^1.1.4",
        "@atcute/tid": "^1.0.3",
        "@atcute/xrpc-server": "^0.1.2",
        "@fastify/cors": "^11.1.0",
        "@fastify/websocket": "^11.2.0",
        "@libsql/client": "^0.15.15",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.44.6",
        "drizzle-zod": "^0.8.3",
        "fastify": "^5.6.1",
        "tsx": "^4.20.6",
        "uint8arrays": "^5.1.0",
        "ws": "^8.18.3",
        "zod": "^4.1.12"
    },
    "type": "module"
}
